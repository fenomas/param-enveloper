{
  "name": "param-enveloper",
  "version": "0.4.0",
  "description": "A sane way to automate WebAudio parameters",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "start": "vite",
    "test": "tsx --test",
    "dev": "tsx --watch --test",
    "build-demo": "vite build",
    "build-lib": "tsc --project ./tsconfig.build.json",
    "build": "pnpm run build-lib && pnpm run build-demo"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "author": "andy@fenomas.com",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/fenomas/param-enveloper.git"
  },
  "devDependencies": {
    "tsx": "^4.18.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0",
    "vite": "^5.4.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100
  }
}
