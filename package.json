{
  "name": "param-enveloper",
  "version": "0.4.0",
  "description": "A sane way to automate WebAudio parameters",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "dev": "vite",
    "test": "tsx --test",
    "build-demo": "vite build",
    "build-lib": "vite build --config vite.config.lib.ts",
    "build": "pnpm run build-lib && pnpm run build-demo"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "author": "andy@fenomas.com",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/fenomas/param-enveloper.git"
  },
  "devDependencies": {
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0"
  },
  "pnpm": {
    "overrides": {
      "cross-spawn": "^7.0.5"
    }
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "packageManager": "pnpm@9.5.0+sha1.8c155dc114e1689d18937974f6571e0ceee66f1d"
}
