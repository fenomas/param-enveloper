  "devDependencies": {
    "@types/bun": "^1.1.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100
  }
